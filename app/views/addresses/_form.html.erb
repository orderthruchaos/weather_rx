<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :line_1, style: "display: block" %>
    <%= form.text_field :line_1 %>
  </div>

  <div>
    <%= form.label :line_2, style: "display: block" %>
    <%= form.text_field :line_2 %>
  </div>

  <div>
    <%= form.label :city, style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :state_id, style: "display: block" %>
    <%= form.select :state_id, @states.map { |state| [state.name, state.id] } %>
  </div>

  <div>
    <%= form.label :"zip_code.code", inner_text: 'Zip code', style: "display: block" %>
    <%= form.text_field :"zip_code.code", value: address&.zip_code&.code %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
