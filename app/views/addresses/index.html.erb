<p style="color: green"><%= notice %></p>

<% content_for :title, "Addresses" %>

<h1>Addresses</h1>

<div id="addresses">
  <% @addresses.each do |address| %>
    <%= render address %>
    <p>
      <%= link_to "Show this address", address %>
    </p>
    <p>
      <%= button_to('Standard forecast',
                    '/forecasts/forecast',
                    { method: :get },
                    { form: { address_id: address.id } }) %>
    </p>
    <p>
      <%= button_to('Hourly forecast',
                    '/forecasts/hourly_forecast',
                    { method: :get },
                    { form: { address_id: address.id } }) %>
    </p>
  <% end %>
</div>

<%= link_to "New address", new_address_path %>
